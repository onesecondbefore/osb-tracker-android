<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onesecondbefore.tracker.demo.MainActivity">

    <LinearLayout
        android:id="@+id/editTypeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Enter the type:"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/editType"
            android:hint="E.g: screenview, exception, social,event.."
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:inputType="text"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editActionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="4dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editTypeView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Enter the action type:"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/editAction"
            android:hint="E.g: click, add, remove, etc.."
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:inputType="text"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editClientIdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="4dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editActionView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Enter the client Id:"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/editClientId"
            android:hint="e.g: ios_sdk-defdf0691b47bea99f6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:inputType="text"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editServerUrlView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="4dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editClientIdView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Enter the server url:"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/editServerUrl"
            android:hint="e.g: https://enbxr4mb0mcla.x.pipedrea..."
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:inputType="text"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/switchLocationView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="6dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editServerUrlView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request for Location"
            android:textSize="20dp"
            />
        <Switch
            android:id="@+id/switchLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchLocationView"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="sendEvent"
            android:text="Click here to get response ->"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>
</RelativeLayout>